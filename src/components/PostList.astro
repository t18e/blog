---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '../utils/date';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

<div class="space-y-4">
  {posts.map((post) => (
    <div class="group">
      <div class="flex items-baseline text-sm text-gray-500 dark:text-gray-400 mb-1">
        <span class="w-12">{formatDate(post.data.date)}</span>
        <a 
          href={`/blog/${post.slug}`}
          class="flex-1 hover:text-gray-900 dark:hover:text-gray-100 font-mono"
        >
          {post.data.title}
        </a>
        <span class="ml-4">{post.data.views?.toLocaleString()}</span>
      </div>
    </div>
  ))}
</div>
